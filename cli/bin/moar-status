#!/bin/bash

binDir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
unsupportedJava=`java -Dmoar.ansi.enable=true -jar ${binDir}/moar-cli-j-main.fat.jar -v 2>&1 | grep 'UnsupportedClassVersionError' | wc -l`

if [ ${unsupportedJava} != "0" ]; then
    echo "Java 11 is required for moar-cli"
    exit 1;
fi

java -Dmoar.ansi.enabled=true -jar ${binDir}/moar-cli-j-main.fat.jar 'status' "$1" "$2"